# Backend environment (example)
# Copy to backend/.env and fill in values.

# MongoDB
MONGO_URL="mongodb://localhost:27017"
DB_NAME="placement_intelligence"

# Auth
JWT_SECRET_KEY="change-me"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# CORS (comma-separated). Leave empty to allow localhost:3000/3001 by default.
CORS_ORIGINS=""

# Groq (OpenAI-compatible)
GROQ_API_KEY="your-groq-api-key"
GROQ_BASE_URL="https://api.groq.com/openai/v1"
GROQ_MODEL="llama-3.3-70b-versatile"

# AI tuning
AI_REQUEST_TIMEOUT_SECONDS="25"
AI_MENTOR_MAX_HISTORY_MESSAGES="20"
AI_MAX_INPUT_CHARS="12000"
